<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hostor_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="de.tudarmstadt.informatik.tk.shhparty.HostorJoinActivity"
    android:background="@drawable/background_img">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#00ccff"
        android:typeface="monospace"
        android:textSize="50dp"
        android:textAlignment="center"
        android:text="@string/app_name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.1"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo_in"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="78dp"
            android:gravity="center_horizontal"/>
    </RelativeLayout>

    <Button
        android:id="@+id/host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/partyhost"
        android:onClick="goToCreateUserProfile"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp" />

    <Button
        android:id="@+id/partic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:tag="search"
        android:onClick="goToCreateUserProfile"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/host"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp" />

</LinearLayout>